<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_1"
            android:layout_width="@dimen/x360"
            android:layout_height="@dimen/y200"
            android:background="@color/colorAccent"
            android:text="stop"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/main_2"
            android:layout_width="@dimen/x360"
            android:layout_height="@dimen/y200"
            android:background="#0d0"
            android:text="restart"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_3"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y200"
        android:gravity="center"
        android:background="#fd0"
        android:text="CustomAdapt"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/main_4"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y200"
        android:gravity="center"
        android:background="#d00"
        android:text="W-360dp(total:360dp)"
        android:textColor="#fff"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_5"
            android:layout_width="@dimen/x480"
            android:layout_height="@dimen/y200"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="W-250dp"
            android:textColor="#0d0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_6"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/y200"
            android:background="#d0a"
            android:gravity="center"
            android:text="W-109dp"
            android:textColor="#0d0"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_7"
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:background="#aef"
            android:gravity="center"
            android:text="W-120dp"
            android:textColor="#0d0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_8"
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:background="#acf"
            android:gravity="center"
            android:text="W-90dp"
            android:textColor="#0d0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_9"
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:background="#fcf"
            android:gravity="center"
            android:text="W-150dp"
            android:textColor="#0d0"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>